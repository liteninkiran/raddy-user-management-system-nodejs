<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <!-- Title -->
    <h1 class="h2">
        Editing: <%= customer.firstName %> <%= customer.lastName %>
    </h1>

    <!-- Info Button -->
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>

</div>

<!-- Breadcrumb -->
<div class="col py-3">

    <div class="row">

        <!-- Breadcrumb -->
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active"><%= customer.firstName %> <%= customer.lastName %></li>
                </ol>
            </nav>
        </div>

        <!-- User ID -->
        <div class="col text-end fw-lighter">
            <b>Last Updated: <%= new Date(customer.updatedAt).toUTCString() %></b>
            <b>UserId:</b>
            <%= customer._id %>
        </div>
    </div>

</div>

<!-- Edit Customer Form -->
<form action="/edit/<%= customer._id %>?_method=PUT" method="POST">

    <!-- Row 1 -->
    <div class="row form-group mb-4">

        <!-- First Name -->
        <div class="col">
            <label for="firstName">First Name</label>
            <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                value="<%= customer.firstName %>"
                placeholder="First Name"
                required
            >
        </div>

        <!-- Last Name -->
        <div class="col">
            <label for="lastName">Last Name</label>
            <input
                type="text"
                class="form-control"
                id="lastName"
                name="lastName"
                value="<%= customer.lastName %>"
                placeholder="Last Name"
                required
            >
        </div>

    </div>

    <!-- Row 2 -->
    <div class="row form-group mb-4">

        <!-- Telephone -->
        <div class="col">
            <label for="tel">Telephone</label>
            <input
                type="text"
                class="form-control"
                id="tel"
                name="tel"
                value="<%= customer.tel %>"
                placeholder="Telephone"
                required
            >
        </div>

        <!-- Email -->
        <div class="col">
            <label for="email">Email</label>
            <input
                type="text"
                class="form-control"
                id="email"
                name="email"
                value="<%= customer.email %>"
                placeholder="Email"
                required
            >
        </div>

    </div>

    <!-- Customer Details -->
    <div class="form-group mb-4">
        <label for="details">Customer Details</label>
        <textarea
            class="form-control"
            name="details"
            id="details"
            cols="30"
            rows="12"
            placeholder="Customer Details"
        ><%= customer.details %></textarea>
    </div>

    <!-- Submit -->
    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Customer</button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">
            Delete Customer
        </button>
    </div>

</form>

<!-- Delete Confirmation Modal -->
<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <div class="modal-title">You are about to remove a customer record.</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <p>
                    This will remove the customer record of <b class="fw-bold">
                        <%= customer.firstName %>
                        <%= customer.lastName %>
                    </b><br />
                    Are you sure?
                </p>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form action="/edit/<%= customer._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Yes, Remove Customer</button>
                </form>
            </div>

        </div>

    </div>

</div>
