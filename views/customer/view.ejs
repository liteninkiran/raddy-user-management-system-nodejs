<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <!-- Title -->
    <h1 class="h2">
        <%= customer.firstName %>
        <%= customer.lastName %>
    </h1>

    <!-- Share / Export -->
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
    </div>

</div>

<!-- Breadcrumb -->
<div class="col py-3">

    <div class="row">

        <!-- Breadcrumb -->
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active"><%= customer.firstName %></li>
                </ol>
            </nav>
        </div>

        <!-- User ID -->
        <div class="col text-end fw-lighter">
            <b>Last Updated <%= new Date(customer.updatedAt).toUTCString() %> </b>
            <b>UserId:</b>
            <%= customer._id %>
        </div>

    </div>

</div>

<!-- Customer Details -->
<ul class="list-group">

    <!-- Name -->
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"> <b>Name:</b></div>
            <div class="col">
                <%= customer.firstName %>
                <%= customer.lastName %>
            </div>
        </div>
    </li>

    <!-- Telephone -->
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"> <b>Tel:</b></div>
            <div class="col">
                <%= customer.tel %>
            </div>
        </div>
    </li>

    <!-- Email -->
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"> <b>Email:</b></div>
            <div class="col">
                <%= customer.email %>
            </div>
        </div>
    </li>

    <!-- Details -->
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"> <b>Details:</b></div>
            <div class="col">
                <%= customer.details %>
            </div>
        </div>
    </li>

    <!-- Date Created -->
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"> <b>Date Created:</b></div>
            <div class="col">
                <%= customer.createdAt %>
            </div>
        </div>
    </li>

    <!-- Date Updated -->
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"> <b>Date Modified:</b></div>
            <div class="col">
                <%= customer.updatedAt %>
            </div>
        </div>
    </li>

</ul>
